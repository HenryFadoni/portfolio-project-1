  name_regex = "AWSServiceRoleForElasticLoadBalancing"
}

resource "aws_iam_service_linked_role" "alb" {
  count            = length(data.aws_iam_roles.alb_service_linked_role.names) == 0 ? 1 : 0
  aws_service_name = "elasticloadbalancing.amazonaws.com"
}

